\cventry{2002--2005}{Bachelor Degree in Archaeology}{University of Pisa}{Pisa}{\textit{GPA -- 104/110}}{First Class Honours, Specialized in Medieval Archaeology }

\section{Graduate School Thesis}
\cvitem{Title}{\emph{Semantic Web and Cultural Heritage: Europeana's API for the representation and visualization of digital resources}}
\cvitem{Supervisors}{Professor Marco Rendeli \& Andrea D'Andrea}
\cvitem{Description}{This thesis aims to give an overview of smenatic web paradigm applied to cultural heritage with a focus on the analysis of Europeana Data Model and the use of Europeana's API for the integration and visualization of metadata elements and contents in third parts on Digital Humanites Domain }

\section{Master's Degree Thesis }

\cvitem{Title}{\emph{Data and archaeological knowledge: The CityGML model applied to data mapping of 3D objects from Uchi Maius -Tunisia-}}
\cvitem{Supervisors}{Professor Marco Milanese \& Associate Andrea D'Andrea}
\cvitem{Description}{The thesis raisese the problem related to the semantical defintion of 3D feature proposing the use of CityGML as application profile for the definition of the architectural elements and archaeological artifacts as semantical concepts.}

\section{Bachelor Thesis}

\cvitem{Title}{\emph{Archaeological quantification of artifacst: methods and techniques}}
\cvitem{Supervisors}{Professor Marco Milanese \& Associate Silvano Antonelli}
\cvitem{Description}{The thesis talks about the quantification of archaeological data analizing different methods and techniques.}

